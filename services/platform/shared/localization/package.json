{
  "name": "@aerofusionxr/localization-service",
  "version": "1.0.0",
  "description": "Comprehensive localization and internationalization service for AeroFusionXR platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "start": "node dist/index.js",
    "clean": "rimraf dist"
  },
  "keywords": [
    "localization",
    "internationalization",
    "i18n",
    "l10n",
    "translation",
    "rtl",
    "aerofusionxr",
    "ar",
    "vr",
    "mr"
  ],
  "author": "AeroFusionXR Development Team",
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "body-parser": "^1.20.2",
    "winston": "^3.10.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "intl": "^1.2.5",
    "polished": "^4.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^29.5.4",
    "@types/pg": "^8.10.2",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aerofusionxr/platform.git",
    "directory": "services/localization"
  },
  "bugs": {
    "url": "https://github.com/aerofusionxr/platform/issues"
  },
  "homepage": "https://github.com/aerofusionxr/platform#readme"
} 