    "@react-native-firebase/crashlytics": "^18.6.1",
    "@react-native-firebase/dynamic-links": "^18.6.1",
    "@react-native-firebase/remote-config": "^18.6.1",
    "@notifee/react-native": "^7.8.2",
    "react-native-push-notification": "^8.1.1",
